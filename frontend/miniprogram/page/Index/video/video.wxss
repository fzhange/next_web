@import "../../common/lib/weui.wxss";

.page-body{
  position: relative;
}
.mantle_con{
  position: absolute;
  top:0;
  height: 225px;
  background-color:rgba(15, 41, 77, 0.5);
  width: calc(100% - 38rpx);
  z-index: 9;
}
video {
  width: 100%;
}
.van-count-down{
  font-size: 48rpx !important;
  color: #fff !important;
  position: absolute;
  top:50%;
  left: 0;
  right: 0;
  text-align: center;
  transform: translateY(-50%);
}

.weui-cells{
  margin: 20px 15px 0;
  text-align: left;
}
.weui-label{
  width: 5em;
}
.auto-rotate-container {
  margin: 20px 20px 0;
  display: flex;
  justify-content: space-between;
}

.video-container {
  margin: 11px 3px;
  display: flex;
  justify-content: center;
}


.main_desc_title{
  font-size: 36rpx;
  font-weight: bolder;
}

.main_desc_content_con{
  padding: 20rpx;
  /* padding-left: 20rpx; */
  /* padding-right: 20rpx; */

}
.main_desc_con{
  display: flex;
  justify-content: space-between;
}
.main_desc_con_text{
  padding-left: 20rpx;
}

.teacther_intro_con{
  background-color: aliceblue;
  padding:20rpx
}
.teacther_intro_desc{
  padding-bottom: 20rpx;
}

.teacther_intro_title_con{
  display: flex;
  flex-direction: row;
}
.teacther_intro_title_con_left{
  width: 240rpx;
  height: 320rpx;
}
.img{
  width: 100%;
  height: 100%;
}
.teacther_intro_title_con_right{
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  justify-content: space-between;
  width: calc(100% - 240rpx);
}